{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"],
        "lib": ["ESNext", "DOM"],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "@customTypes/*": ["types/*"],
            "@services/*": ["services/*"],
            "@database/*": ["database/*"],
            "@enums/*": ["enums/*"],
            "@lib/*": ["lib/*"],
            "@zodSchemas/*": ["lib/schemas/models/*"],
            "@routes/*": ["routes/*"],
            "@utils/*": ["utils/*"],
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
